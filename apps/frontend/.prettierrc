{
	"arrowParens": "avoid",
	"useTabs": true,
	"singleQuote": true,
	"trailingComma": "none",
	"printWidth": 100,
	"plugins": [
		"prettier-plugin-svelte"
	],
	"pluginSearchDirs": [
		"."
	],
	"svelteSortOrder": "options-styles-scripts-markup",
	"svelteBracketNewLine": true,
	"svelteIndentScriptAndStyle": true,
	"overrides": [
		{
			"files": "*.svelte",
			"options": {
				"parser": "svelte"
			}
		}
	]
}